# Frontend Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-domain.railway.app
NEXT_PUBLIC_SOCKET_URL=https://your-backend-domain.railway.app
NEXT_PUBLIC_FRONTEND_URL=https://your-domain.com

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Optional: OAuth Client IDs (for frontend OAuth)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Optional: CDN and Asset Configuration
NEXT_PUBLIC_CDN_URL=https://your-cdn-domain.com
NEXT_PUBLIC_UPLOAD_URL=https://your-backend-domain.railway.app/uploads
